@model PersonsViewModel

<div class="row">
    <div class="col col-lg-5 mx-auto">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Firstname</th>
                    <th>Lastname</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var director in Model.Persons)
                { 
                    <tr>
                        <td>
                            @director.Firstname
                        </td>
                        <td>
                            @director.Surname
                        </td>
                        <td>
                            <a asp-controller="People"
                               asp-action="ShowDirectorMovies"
                               asp-route-id="@director.Id"
                               class="btn btn-outline-info"
                               >Movies</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
