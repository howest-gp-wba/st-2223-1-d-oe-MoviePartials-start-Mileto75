@model PersonsViewModel

<div class="row">
    <div class="col col-lg-5 mx-auto">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Firstname</th>
                    <th>Lastname</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var actor in Model.Persons)
                {
                    <tr>
                        <td>
                            @actor.Firstname
                        </td>
                        <td>
                            @actor.Surname
                        </td>
                        <td>
                            <a asp-controller="People"
                               asp-action="ShowActorMovies"
                               asp-route-id="@actor.Id"
                               class="btn btn-outline-info">Movies</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>